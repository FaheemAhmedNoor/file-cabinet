<style>

  .form-div form{
    display: flex;
    justify-content: center;
    flex-direction: column;
    gap: 1em;
  }
</style>
<div class="form-div">
  <%= form_with model: @doc do |form| %>
    <%= form.label :title, "Title" %>
    <%= form.text_field :title %>

    <%= form.label :content, "Content" %>
    <%= form.text_area :content  %>

    <%= form.submit %>
  <% end %>
</div>

